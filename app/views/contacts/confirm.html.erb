<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
   <h3>以下の内容で送信する</h3>

<%= form_for(@contact) do |f| %>
<%= f.hidden_field :name %>
<%= f.hidden_field :email %>
<%= f.hidden_field :content %>

<p>名前：<%= @contact.name %></p>
<p>E-mail：<%= @contact.email  %></p>
<p>問い合わせ内容：<%= @contact.content %></p>
<%= f.submit "登録", class: 'btn btn-primary btn-success' %>
<% end %>
<br>
<%= form_for(@contact, url: new_contact_path, method: "get") do |f| %>
 <%= f.hidden_field :name %>
 <%= f.hidden_field :email %>
 <%= f.hidden_field :content %>
 <%= f.submit "戻る", name: 'back', class: 'btn btn-primary btn-alert' %>
 <% end %>
 </div>
 </div>
